                                        };

                                suggestionsBox.appendChild(suggestionItem);
                            });
                            });
                        } else {
                            suggestionsBox.innerHTML = "";
                        }
                    });

                    // Hide suggestions when clicking outside
                    document.addEventListener("click", function (e) {
                        if (!suggestionsBox.contains(e.target) && e.target !== searchBox) {
                            suggestionsBox.innerHTML = "";
                        }
                    });
                });
    </script>
