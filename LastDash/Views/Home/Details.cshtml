@{
    Layout = null;

    string LimitWords(string content, int wordLimit = 100)
    {
        var words = content.Split(' ');
        if (words.Length <= wordLimit)
        {
            return content;
        }
        return string.Join(" ", words.Take(wordLimit)) + "..."; // Adds ellipsis after 100 words
    }
}


